<h1>Share your product!</h1>

 <%= form_for(@link) do |f| %>
  <% if @link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
      <% @link.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, placeholder: "Product title", :size => "30" %>
  </div>
  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_field :url, placeholder: "Product link", :size => "30" %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, :size => "60x5", placeholder: "Enter a description of the product here" %>
  </div>
  <%= hidden_field_tag :user_id, current_user.id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
