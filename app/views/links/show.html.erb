<div class='row'>
  <div class='col-md-2'></div>
  <div class='col-md-8'>
    <div class='row' id='panel-row'>
      <h1 align='center'><%= link_to @link.title, @link.url, :target => '_blank' %></h1>
    </div>
    <div class='row' id='panel-row'>
      <h4 align='left'>Description</h4>
      <p> <%= @link.description %> <br></p>
    </div>
    <div class='row' id='panel-row'>
      <%= form_for(@comment) do |f| %>
<br>
<h4>Reviews</h4>
  <ol>
  <% @link.comments.each do |comment| %>
  <li>
    <p><%= comment.message %></p>
    <p><strong>Author</strong>: <%= comment.user.username %> - <%=comment.user.position%> </p>
  </li>
  <% end %>
</ol>
    <br><br>
    <div class="field">
    <%= f.label :Add_review %><br />
    <%= f.text_area :message, :size => "60x4" %>
  </div>
  <div class="actions">
    <%= f.submit "Submit"%>
  </div>

  <%= f.hidden_field :link_id, :value => @link.id %>
<% end %>
    </div>
  </div>
  <div class='col-md-2'></div>
</div>