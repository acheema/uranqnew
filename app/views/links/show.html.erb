<div class='row'>
  <div class='col-md-2'></div>
  <div class='col-md-8'>
    <div class='row' id='panel-row'>
      <h1 align='center'><%= link_to @link.title, @link.url, :target => '_blank' %></h1>
    </div>
    <div class='row'>
      <h4 align='left'>Description</h4>
      <p> <%= @link.description %> <br><br></p>
    </div>
    <div class='row panel panel-default' id='remove-pad'>
      <div class='panel-heading panel-title'>Reviews</div>
      <div class='panel-body'>
        <%= form_for(@comment) do |f| %>
        <ul>
          <% @link.comments.each do |comment| %>
          <li class='well'>
            <p><b><%= link_to comment.user.username, controller: "user", action: "show", id: comment.user.id %></b> - <i><%=comment.user.position%></i></p>
            <p><%= comment.message %></p>
          </li>
          <% end %>
        </ul>
      </div>
      <div class="panel-heading panel-title">Add Review</div>
      <div class="panel-body">
        <div class="field">
          <%= f.text_area :message, :size => "60x4" %><br>
          <input class="btn btn-primary" id='sign-up-button' type="submit" value="Submit">
        </div>
      </div>

      <%= f.hidden_field :link_id, :value => @link.id %>
      <% end %>
    </div>
  </div>


</div>
<div class='col-md-2'></div>

